{
  "name": "automation_practise",
  "version": "1.0.0",
  "description": "Playwright + TypeScript project for Automation Practice demo site",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:api": "playwright test --project=api",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "test:allure": "npm run test:api && npm run allure:generate",
    "docker:build": "docker-compose build",
    "docker:test": "docker-compose up --abort-on-container-exit",
    "docker:test:clean": "docker-compose down && docker-compose up --abort-on-container-exit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.8.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.2",
    "typescript": "^5.6.3",
    "winston": "^3.18.3"
  }
}
